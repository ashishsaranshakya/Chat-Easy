<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChatsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:padding="2dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnNewChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_plus"
        app:backgroundTint="@color/brand_blue_400"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnNewUser"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="15dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/btnNewChat"
        android:src="@drawable/ic_add_user"
        app:backgroundTint="@color/brand_blue_400" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnNewGroup"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="15dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/btnNewUser"
        android:src="@drawable/ic_add_group"
        app:backgroundTint="@color/brand_blue_400" />

</RelativeLayout>